package com.company;

import java.util.Objects;
import java.lang.*;

public class MyComplex {
    private double real = 0.0;
    private double imag = 0.0;
    public MyComplex(){}

    public MyComplex(double imag,double real){
        this.imag = imag;
        this.real = real;
    }

    public double getImag() {
        return imag;
    }

    public double getReal() {
        return real;
    }

    public void setImag(double imag) {
        this.imag = imag;
    }

    public void setReal(double real) {
        this.real = real;
    }
    public void setValue(double imag,double real){
        setImag(imag);
        setReal(real);
    }
    public boolean isReal(){
        return imag == 0;
    }
    public boolean isImag(){
        return imag != 0;
    }

    @Override
    public boolean equals(Object o) {
        if (this == o) return true;
        if (o == null || getClass() != o.getClass()) return false;
        MyComplex myComplex = (MyComplex) o;
        return Double.compare(myComplex.real, real) == 0 &&
                Double.compare(myComplex.imag, imag) == 0;
    }
    public boolean equals(double real,double imag){
        return Double.compare(this.real, real) == 0 &&
                Double.compare(this.imag, imag) == 0;
    }
    public double magnitude(){
        return Math.sqrt(Math.pow(real,2)+Math.pow(imag,2));
    }
    public double argument(){
        return Math.atan(imag/real);
    }
    public void add(MyComplex right){
        this.imag = this.imag + right.imag;
        this.real = this.real + right.real;

    }
    public void subtract(MyComplex right){
        this.imag = this.imag - right.imag;
        this.real = this.real - right.real;

    }
    public void multiply(MyComplex right){
        this.imag = right.imag * this.imag;
        this.real = right.real * this.real;

    }
    public void divide(MyComplex right){
        this.imag = this.imag / right.imag;
        this.real = this.real / right.real;

    }
    public MyComplex addNew(MyComplex right){
        MyComplex temp = new MyComplex(0,0);
        temp.imag = this.imag + right.imag;
        temp.real = this.real + right.real;
        return temp;
    }
    public MyComplex subtractNew(MyComplex right){
        MyComplex temp = new MyComplex(0,0);
        temp.imag = this.imag - right.imag;
        temp.real = this.real - right.real;
        return temp;
    }
    public void conjuguate(){
        this.imag = -(this.imag);
    }
    @Override
    public String toString() {
        return  real +
                "+" + imag + "i";
    }

    public static void main(String[] args) {

    }
}
